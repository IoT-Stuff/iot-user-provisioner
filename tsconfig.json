{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "./dist/",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "alwaysStrict": true,
    "sourceMap": true,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
  },
  "include": [
    "./types/**/*",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./test/"
  ]
}